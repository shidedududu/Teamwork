<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/bg_white">

        <TextView
            android:id="@+id/icon"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/personal_icon"
            android:gravity="center"
            android:text="Name"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/personal_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            app:srcCompat="@mipmap/personal_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/bg_white"
        android:paddingTop="2dp"
        android:translationY="2dp">

        <TextView
            android:id="@+id/information"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/personal_information"
            android:background="@color/bg_white"
            android:gravity="left|center"
            android:text="个人信息"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/personal_information"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            app:srcCompat="@mipmap/personal_information" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/bg_white"
        android:paddingTop="4dp"
        android:translationY="4dp">

        <TextView
            android:id="@+id/checkupdate"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/personal_checkupdate"
            android:background="@color/bg_white"
            android:gravity="left|center"
            android:paddingTop="2dp"
            android:text="检查更新"
            android:textSize="15sp"
            android:translationY="4dp" />

        <ImageView
            android:id="@+id/personal_checkupdate"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            app:srcCompat="@mipmap/personal_checkupdate" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/bg_white"
        android:paddingTop="6dp"
        android:translationY="6dp">

        <TextView
            android:id="@+id/feedback"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/personal_feedback"
            android:background="@color/bg_white"
            android:gravity="left|center"
            android:paddingTop="2dp"
            android:text="意见反馈"
            android:textSize="15sp"
            android:translationY="6dp" />

        <ImageView
            android:id="@+id/personal_feedback"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            app:srcCompat="@mipmap/personal_feedback" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/bg_white"
        android:paddingTop="8dp"
        android:translationY="8dp">

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/personal_logout"
            android:background="@color/bg_white"
            android:gravity="center|left"
            android:paddingTop="2dp"
            android:text="退出登录"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp"
            android:translationY="8dp" />

        <ImageView
            android:id="@+id/personal_logout"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            app:srcCompat="@mipmap/personal_logout" />
    </RelativeLayout>


</LinearLayout>
